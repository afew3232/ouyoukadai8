		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th></th>
					<th></th>
					<th colspan="1"></th>
				</tr>
			</thead>

			<tbody>
				<% @books.each do |book| %>
					<tr id="book-index-ajax-<%= book.id %>">
